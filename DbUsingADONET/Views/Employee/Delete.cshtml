@model DbUsingADONET.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h4>Employee</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this employee?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Employee ID
        </dt>
        <dd class="col-sm-10">
            @Model.EmployeeId
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentId
        </dd>
     
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="EmployeeId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
