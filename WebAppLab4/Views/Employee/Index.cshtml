@model List<EmployeeModel>
@{
    ViewBag.Title = "Employee List";
}
<h2>Employee List</h2>
<p>@Html.ActionLink("Add New Employee", "Create")</p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Actions</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.EmpId</td>
            <td>@employee.Name</td>
            <td>@employee.Email</td>
            <td>@employee.Gender</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = employee.EmpId }) |
                @Html.ActionLink("Delete", "Delete", new { id = employee.EmpId })
            </td>
        </tr>
    }
</table>
