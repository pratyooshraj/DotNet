@model List<DepartmentModel>
@{
    <span>Department Table</span>
    <table>
        @foreach (DepartmentModel department in Model)
        {
            <tr>
                <td>@department.DepId</td>
                <td>@department.Name</td>
                <td>@department.Description</td>
                <td><a href="/department/depEmployees/@department.DepId">View List of employees in department</a></td>
            </tr>
        }
    </table>

    <style>
        table, td, tr {
            border: 1px solid black;
            padding: 10px;
        }
    </style>
}
