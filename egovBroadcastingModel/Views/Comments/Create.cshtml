            <div class="form-group">
                <label asp-for="CommentDateTime" class="control-label"></label>
                <input asp-for="CommentDateTime" class="form-control" />
                <span asp-validation-for="CommentDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisasterNoticeId" class="control-label"></label>
                <select asp-for="DisasterNoticeId" class ="form-control" asp-items="ViewBag.DisasterNoticeId"></select>
